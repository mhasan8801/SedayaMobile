<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/isikeranjang"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10dp">

<!--            <CheckBox-->
<!--                android:id="@+id/check_item"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"/>-->

            <ImageView
                android:id="@+id/img_produk"
                android:layout_width="140dp"
                android:src="@drawable/asset_produk1"
                android:layout_height="140dp"
                android:background="@color/white"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="200sp"
                    android:layout_height="45sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="Judul seni"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Status pesanan"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:text="Harga"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_harganilai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:text="Rp. 800.000"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:text="Transport"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_transportnilai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:text="Rp. 500.000"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:text="Total"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_totalnilai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:text="Rp. 1.500.000"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp">

                <Button
                        android:id="@+id/btn_batal"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="3sp"
                        android:text="Batal"
                        android:textSize="8dp"/>

                    <Button
                        android:id="@+id/btn_bayar"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="3sp"
                        android:text="Bayar"
                        android:textSize="8dp"/>

                    <Button
                        android:id="@+id/btn_selesai"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="3sp"
                        android:text="Selesai"
                        android:textSize="8dp"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>