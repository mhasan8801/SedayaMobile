<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    android:orientation="vertical"
    tools:context=".fragments.Keranjang">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/isikeranjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Status Transaksi "/>

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/colorPrimary_700"
                                android:text="MENUNGGU PEMBAYARAN"
                                android:textAlignment="textEnd"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/appCompatImageView"
                                android:layout_width="@dimen/_299sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_margin="@dimen/_1sdp"
                                android:background="#585858" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Tanggal Pesanan "/>

                            <TextView
                                android:id="@+id/tv_tglpesan"
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="30 Februari 2022"
                                android:textAlignment="textEnd"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Dipesan Tanggal "/>

                            <TextView
                                android:id="@+id/tv_tgldipesan"
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="10 Februari 2022"
                                android:textAlignment="textEnd"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Alamat Pemesan"/>

                            <TextView
                                android:id="@+id/tv_alamat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Dusun Ky Hasan RT.09/RW.05 Desa Kerpangan Kecamatan Leces Kabupaten Probolinggo Provinsi Jawa Timur Indonesia Kode pos 67273"
                                android:layout_margin="@dimen/_2sdp"/>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_produk"
                                android:layout_width="@dimen/_95sdp"
                                android:src="@drawable/asset_produk1"
                                android:layout_height="@dimen/_95sdp"
                                android:background="@color/white"
                                android:cropToPadding="true"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/tv_judul"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Judul Seni"/>

                                <TextView
                                    android:id="@+id/tv_namaseniman"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Nama Seniman"/>

                                <TextView
                                    android:id="@+id/tv_alamatseniman"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Alamat Seniman"/>

                            </LinearLayout>




                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/colorPrimary_700"
                                android:text="Informasi Pembayaran"
                                android:textSize="@dimen/_13ssp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_299sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_margin="@dimen/_1sdp"
                                android:background="#585858" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Harga Seni "/>

                            <TextView
                                android:id="@+id/tv_harga"
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Rp. 2.000.000"
                                android:textAlignment="textEnd"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Transportasi "/>

                            <TextView
                                android:id="@+id/tv_transport"
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Rp. 500.000"
                                android:textAlignment="textEnd"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Harga Total "/>

                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:textColor="@color/black"
                                android:text="Rp. 2.500.000"
                                android:textAlignment="textEnd"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/div_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="7dp">

            <RelativeLayout
                android:id="@+id/btn_batal"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_btn_beli"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Batal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_pesan"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_btn_beli"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Bayar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>